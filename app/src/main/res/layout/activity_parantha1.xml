<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textCapWords"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            android:textColor="#000b4d"/>
        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="16sp"
            android:text="Extra's"
            android:layout_marginLeft="4dp"
            android:textColor="#33cc5a"/>

        <CheckBox
            android:id="@+id/pickle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:paddingLeft="14dp"
            android:textSize="16sp"
            android:text="Pickle"
            android:textColor="#66220d">

        </CheckBox>
        <CheckBox
            android:id="@+id/chutney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:paddingLeft="14dp"
            android:textSize="16sp"
            android:text="Green Chutney"
            android:textColor="#66220d">

        </CheckBox>
        <TextView
            style="@style/HeaderTextStyle"
            android:layout_marginBottom="16sp"
            android:text="Quantity"
            android:layout_marginLeft="4dp"
            android:textColor="#33cc5a"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16sp"
                android:onClick="increment"
                android:text="+"
                android:background="#b64b01"/>

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:layout_marginRight="8dp" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16sp"
                android:onClick="decrement"
                android:text="-"
                android:background="#b64b01"/>
        </LinearLayout>
        <TextView
            style="@style/HeaderTextStyle"
            android:text="Price"
            android:layout_marginLeft="4dp"
            android:textColor="#33cc5a"/>

        <TextView
            android:id="@+id/price_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16sp"
            android:text="₹0"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:text="orderSummary"
            android:textAllCaps="true"
            android:layout_marginLeft="4dp"
            android:textColor="#33cc5a"/>
        <TextView
            android:id="@+id/order_summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹0"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:onClick="submitOrder"
            android:text="order"
            android:background="#9b787b"/>

    </LinearLayout>
</ScrollView>