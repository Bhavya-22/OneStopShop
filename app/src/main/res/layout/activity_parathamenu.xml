<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:baselineAligned="false"
            android:layout_marginBottom="12dp"
            android:background="@color/cardview_light_background"
            android:id="@+id/button">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/parantha1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/name"
                    android:text="aloo parantha"
                    android:layout_marginLeft="4dp"
                    android:textColor="#47a64a">

                </TextView>


                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12sp"
                    android:text="price:-  ₹15"
                    android:textSize="20dp"
                    android:textColor="#f44336"></TextView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nopreview">

                </ImageView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:baselineAligned="false"
            android:layout_marginBottom="12dp"
            android:background="@color/cardview_light_background"
            android:id="@+id/button1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/parantha2">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Satu parantha"
                    android:layout_marginLeft="4dp"
                    android:textColor="#47a64a">

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/desc1"
                    android:layout_marginTop="12sp"
                    android:text="price:-  ₹20"
                    android:layout_marginLeft="4dp"
                    android:textColor="#f44336">
                </TextView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/profilePic1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nopreview">

                </ImageView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:baselineAligned="false"
            android:layout_marginBottom="12dp"
            android:background="@color/cardview_light_background"
            android:id="@+id/button2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/parantha3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/name2"
                    android:text="Paneer parantha"
                    android:layout_marginLeft="4dp"
                    android:textColor="#47a64a">

                </TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/desc2"
                    android:layout_marginTop="12sp"
                    android:text="price:-  ₹20"
                android:layout_marginLeft="4dp"
                    android:textColor="#f44336">
                </TextView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/profilePic2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nopreview">

                </ImageView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>